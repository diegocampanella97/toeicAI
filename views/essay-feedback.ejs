<%- include('partials/header', {title: title}) %>

<h1 class="mb-4">Essay Exercise Feedback</h1>

<div class="card mb-4">
  <div class="card-header bg-success text-white">
    <h5 class="card-title mb-0">Your Submission</h5>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
        <h6>Essay Prompt:</h6>
        <div class="alert alert-light mb-3">
          <p><strong><%= essay.prompt %></strong></p>
          <p class="small"><%= essay.instructions %></p>
        </div>
        
        <h6>Your Essay:</h6>
        <div class="alert alert-light mb-3">
          <p style="white-space: pre-line"><%= response %></p>
          <p class="text-muted text-end"><small><%= wordCount %> words</small></p>
        </div>
        
        <hr>
        
        <h6>Evaluation:</h6>
        <div class="row mb-3">
          <div class="col-md-6">
            <div class="card">
              <div class="card-header bg-primary text-white">
                <h6 class="card-title mb-0">Overall Score</h6>
              </div>
              <div class="card-body text-center">
                <h2>
                  <% for(let i = 1; i <= 5; i++) { %>
                    <i class="bi <%= i <= score ? 'bi-star-fill' : 'bi-star' %>"></i>
                  <% } %>
                  <span class="ms-2"><%= score %>/5</span>
                </h2>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card">
              <div class="card-header bg-info text-white">
                <h6 class="card-title mb-0">Word Count</h6>
              </div>
              <div class="card-body text-center">
                <h2><%= wordCount %> <small class="text-muted">words</small></h2>
              </div>
            </div>
          </div>
        </div>
        
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card">
              <div class="card-header bg-secondary text-white">
                <h6 class="card-title mb-0">Organization</h6>
              </div>
              <div class="card-body text-center">
                <h4>
                  <% for(let i = 1; i <= 5; i++) { %>
                    <i class="bi <%= i <= organization ? 'bi-star-fill' : 'bi-star' %> small"></i>
                  <% } %>
                </h4>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card">
              <div class="card-header bg-secondary text-white">
                <h6 class="card-title mb-0">Grammar</h6>
              </div>
              <div class="card-body text-center">
                <h4>
                  <% for(let i = 1; i <= 5; i++) { %>
                    <i class="bi <%= i <= grammar ? 'bi-star-fill' : 'bi-star' %> small"></i>
                  <% } %>
                </h4>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card">
              <div class="card-header bg-secondary text-white">
                <h6 class="card-title mb-0">Vocabulary</h6>
              </div>
              <div class="card-body text-center">
                <h4>
                  <% for(let i = 1; i <= 5; i++) { %>
                    <i class="bi <%= i <= vocabulary ? 'bi-star-fill' : 'bi-star' %> small"></i>
                  <% } %>
                </h4>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card">
              <div class="card-header bg-secondary text-white">
                <h6 class="card-title mb-0">Thesis Development</h6>
              </div>
              <div class="card-body text-center">
                <h4>
                  <% for(let i = 1; i <= 5; i++) { %>
                    <i class="bi <%= i <= thesisDevelopment ? 'bi-star-fill' : 'bi-star' %> small"></i>
                  <% } %>
                </h4>
              </div>
            </div>
          </div>
        </div>
        
        <div class="alert <%= feedbackClass %>">
          <h6>Feedback:</h6>
          <p><%= feedback %></p>
          
          <% if (suggestions && suggestions.length > 0) { %>
            <h6 class="mt-3">Suggestions for Improvement:</h6>
            <ul>
              <% suggestions.forEach(function(suggestion) { %>
                <li><%= suggestion %></li>
              <% }); %>
            </ul>
          <% } %>
        </div>
        
        <div class="d-flex justify-content-between mt-4">
          <a href="/writing" class="btn btn-secondary">Back to Writing</a>
          <a href="/writing/essay-exercise" class="btn btn-primary">Try Another Essay</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>