<%- include('partials/header', {title: title}) %>

<div class="jumbotron">
  <h1 class="display-4">Welcome to TOEIC Study App</h1>
  <p class="lead">Improve your English skills for the TOEIC exam with our interactive exercises.</p>
  <hr class="my-4">
  <p>Currently featuring the Writing, Speaking, and Listening sections. More sections coming soon!</p>
  <div class="d-flex gap-2">
    <a class="btn btn-primary btn-lg" href="/writing" role="button">Start Writing Practice</a>
    <a class="btn btn-success btn-lg" href="/speaking" role="button">Start Speaking Practice</a>
    <a class="btn btn-info btn-lg" href="/listening" role="button">Start Listening Practice</a>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">Writing Section</h5>
      </div>
      <div class="card-body">
        <p class="card-text">Practice writing sentences about photos using given word pairs, similar to Questions 1-5 in the TOEIC exam.</p>
        <a href="/writing" class="btn btn-outline-primary">Go to Writing Practice</a>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header bg-info text-white">
        <h5 class="card-title mb-0">Listening Section</h5>
      </div>
      <div class="card-body">
        <p class="card-text">Practice your listening skills with TOEIC-style exercises including photographs, conversations, and more.</p>
        <a href="/listening" class="btn btn-outline-info">Go to Listening Practice</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>